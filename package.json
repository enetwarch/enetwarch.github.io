{
  "name": "the-odin-projects",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "format:check": "pnpm exec prettier --check .",
    "format:fix": "pnpm exec prettier --write .",
    "lint:check": "pnpm exec eslint .",
    "lint:fix": "pnpm exec eslint --fix .",
    "check": "pnpm format:check && pnpm lint:check",
    "fix": "pnpm format:fix && pnpm lint:fix",
    "build": "node ./tools/build.mjs && pnpm fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.3.0",
    "prettier": "^3.6.2"
  },
  "dependencies": {
    "marked": "^16.4.1"
  }
}
